@model EmployeeModel

@using  Nop.Plugin.Widgets.BlankTable.DomainsHrg

@{
    //page title
    ViewBag.PageTitle = T(EmployeeModel.Labels.EditEmployeeDetails).Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Employees");
}

<form asp-controller="Employee" asp-action="Edit" method="post" id="employee-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T(EmployeeModel.Labels.EditEmployeeDetails) - @Model.Name
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T(EmployeeModel.Labels.BackToList)</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="button" onclick="javascript:OpenWindow('@(Url.RouteUrl<Employee>(new { SeName = Model.SeName }))', 800, 600, true); return false;" class="btn btn-info">
                <i class="far fa-eye"></i>
                @T(Common.Labels.Preview)
            </button>
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T(Common.Labels.Save)
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T(Common.Labels.SaveContinue)
            </button>
            <span id="employee-delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                @T(Common.Labels.Delete)
            </span>
            @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.EmployeeDetailsButtons, additionalData = Model })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="employee-delete" />