@model CategoryModel
@{
    //page title
    ViewBag.PageTitle = T(CategoryModel.Labels.AddNew).Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Categories");
}

<form asp-controller="Category" asp-action="Create" method="post" id="category-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T(CategoryModel.Labels.AddNew)
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T(CategoryModel.Labels.BackToList)</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T(Common.Labels.Save)
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T(Common.Labels.SaveContinue)
            </button>
            @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.CategoryDetailsButtons, additionalData = Model })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>